<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pass_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hhzmy.activity.PassWordActivity">

    <RelativeLayout
        android:id="@+id/mybuy_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_back_passw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:src="@mipmap/ucwv_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置密码"
            android:textSize="25sp"/>
    </RelativeLayout>
    <View
        android:id="@+id/my_buy_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#767171"></View>

    <TextView
        android:id="@+id/mess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:text="短信验证码已经发送至"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="20dp"
        android:background="#e9d5d5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textSize="20sp"
            android:gravity="center"
            android:text="验证码"/>
        <EditText
            android:id="@+id/yzm_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@null"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/seconds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#746b6b"
            android:gravity="center"
            android:text="60秒"
            android:layout_weight="0.6"/>

    </LinearLayout>


    <LinearLayout
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:paddingLeft="15dp"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pass_et"
            android:layout_weight="0.5"
            android:elegantTextHeight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="6-20位数字+字母后符号组合"
            android:password="true"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/choss"
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/mybuy_show_password"
            android:layout_gravity="center_vertical" />
    </LinearLayout>



    <Button
        android:id="@+id/commit"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:background="#ef9414"
        android:text="提交"/>


</LinearLayout>
