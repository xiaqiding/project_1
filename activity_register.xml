<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#55d3d2de"
    tools:context="com.hhzmy.activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/mybuy_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_back_amg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:src="@mipmap/ucwv_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="验证手机号"
            android:textSize="25sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/my_buy_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mybuy_rl"
        android:background="#2e2a2a"></View>

    <View
        android:id="@+id/my_buy"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/my_buy_v"
        android:background="#dec5c5"></View>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/my_buy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:gravity="center"
            android:text="手机号"/>
        <EditText
            android:id="@+id/input_phone"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:background="#d2c2c2" />
        <ImageView
            android:id="@+id/phone_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@mipmap/bg_my_order_search_cancle"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay"
        android:orientation="horizontal"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意苏宁易购会员章程和易付宝协议"/>


    </LinearLayout>
    <Button
        android:id="@+id/next"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="下一步"
        android:background="#f7f006"
        />
</RelativeLayout>
