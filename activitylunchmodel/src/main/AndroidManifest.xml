<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bwie.activitylunchmodel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".A1Activity"
            android:launchMode="standard"/>

        <activity
            android:name=".B1Activity"
            android:launchMode="standard"/>

        <activity
            android:name=".B2Activity"
            android:launchMode="singleTop"/>

        <activity
            android:name=".C1Activity"
            android:launchMode="standard"/>

        <activity
            android:name=".C2Activity"
            android:launchMode="singleTask"/>

        <activity
            android:name=".C3Activity"
            android:launchMode="standard"/>

        <activity
            android:name=".D1Activity"
            android:launchMode="standard"/>

        <activity
            android:name=".D2Activity"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".D3Activity"
            android:launchMode="standard"/>
    </application>

</manifest>