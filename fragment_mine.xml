<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hhzmy.fragment.MineFragment">

    <RelativeLayout
        android:id="@+id/mybuy_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:src="@mipmap/ucwv_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录" />
    </RelativeLayout>

    <View
        android:id="@+id/my_buy_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mybuy_rl"
        android:background="#000"></View>

    <LinearLayout
        android:id="@+id/my_buy_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_buy_v"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="0.2"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账 号"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/mine_inputNum"
            android:background="@null"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="手机号/邮箱/用户名/门店会员卡"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/my_buy_v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/my_buy_ll"
        android:layout_marginTop="15dp"
        android:background="#000"></View>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="免费注册"
        android:background="@null"
        android:textColor="#FFC948"

        android:id="@+id/mine_register"
        android:layout_below="@+id/mine_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/my_buy_nopassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="忘记密码"
        android:layout_below="@+id/mine_login"
        android:layout_alignEnd="@+id/mine_login"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="21dp" />

    <LinearLayout
        android:id="@+id/my_buy_yanzheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/mine_login"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_weight="0.2"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="20sp" />

        <EditText
            android:background="@null"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入右侧验证码"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_store_membership_card"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店会员卡"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_online_enable"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="易付宝"
                android:id="@+id/textView" />
        </LinearLayout>
    </LinearLayout>

    `<Button
        android:id="@+id/mine_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/mine_register"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp">

        <View
            android:gravity="center"
            android:id="@+id/my_buy_v2"
            android:layout_width="120dp"
            android:layout_height="0.5dp"
            android:layout_below="@id/my_buy_ll"
            android:layout_marginTop="15dp"
            android:background="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他方式登陆"/>

        <View
            android:id="@+id/my_buy_v3"
            android:layout_width="120dp"
            android:layout_height="0.5dp"
            android:layout_below="@id/my_buy_ll"
            android:layout_marginTop="15dp"
            android:background="#000"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:id="@+id/my_buy_ll_one"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_buy_v1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp">

        <TextView
            android:paddingLeft="15dp"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="20sp" />

        <EditText
            android:layout_weight="0.6"
            android:elegantTextHeight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入6——20位的易购密码"
            android:password="true"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/iv"
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/mybuy_show_password"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</RelativeLayout>
