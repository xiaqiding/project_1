<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hhzmy.activity.ContentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@mipmap/btn_back" />

        <HorizontalScrollView
            android:id="@+id/hor"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:text="商品"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:text="详情"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"

                    android:text="评价"
                    android:textSize="18dp" />


            </LinearLayout>
        </HorizontalScrollView>


        <ImageView
            android:id="@+id/gouwucheimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:src="@mipmap/commodity_shoppingcard" />

        <ImageView
            android:id="@+id/diandian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:src="@mipmap/ebuy" />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"

        android:layout_height="490dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@mipmap/commodity_castom_down" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/commodity_favor_down" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/commodity_shop_down" />

        <Button
            android:id="@+id/zhifu"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@mipmap/eva_block_back_orange"
            android:text="立即购买"
            android:textSize="15dp" />

        <Button
            android:id="@+id/jiarugouwuche"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/new_person_gift_bottom2"
            android:text="加入购物车"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>
