<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hhzmy.activity.WelActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/wel_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wel_vp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <View
            android:id="@+id/wel_dot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/dot_focus"/>

        <View
            android:id="@+id/wel_dot2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/dot_normal"/>

        <View
            android:id="@+id/wel_dot3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/dot_normal"/>

    </LinearLayout>

</RelativeLayout>
