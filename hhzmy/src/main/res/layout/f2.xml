<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tuwen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="图文详情"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/canshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="规格参数"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/baochuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="包装售后"
            android:textSize="20dp" />
    </LinearLayout>
    <fragment
        android:id="@+id/one_xq"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.hhzmy.contentfragment.F2_1"/>

    <fragment
        android:id="@+id/two_xq"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.hhzmy.contentfragment.F2_2"/>
    <fragment
        android:id="@+id/three_xq"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.hhzmy.contentfragment.F2_3"/>


</LinearLayout>